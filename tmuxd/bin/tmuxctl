#!/usr/bin/env bash
set -euo pipefail

SOCKET_DIR="${CLAWDBOT_TMUX_SOCKET_DIR:-${TMPDIR:-/tmp}/clawdbot-tmux-sockets}"
TMUXD_SOCKET="${TMUXD_SOCKET:-$SOCKET_DIR/clawdbot.sock}"
TMUXD_PREFIX="${TMUXD_PREFIX:-droid-}"

mkdir -p "$SOCKET_DIR"

usage() {
  cat <<EOF
Usage:
  tmuxctl list
  tmuxctl start <name> -- <command...>
  tmuxctl stop <name>
  tmuxctl attach <name>
  tmuxctl log <name> [-n N]
  tmuxctl status

  # Droid helpers (recommended)
  tmuxctl droid-exec <name> -- "<prompt>" [--cwd <path>] [--auto <low|medium|high>]
  tmuxctl droid-continue <name> -- "<prompt>" [--cwd <path>] [--auto <low|medium|high>]
  tmuxctl session-id <name>

Env:
  TMUXD_SOCKET=$TMUXD_SOCKET
  TMUXD_PREFIX=$TMUXD_PREFIX
EOF
}

tmuxS() { tmux -S "$TMUXD_SOCKET" "$@"; }

sess_for() {
  local name="$1"
  echo "${TMUXD_PREFIX}${name}"
}

cmd_list() {
  tmuxS list-sessions -F '#{session_name}' 2>/dev/null | grep -E "^${TMUXD_PREFIX}" || true
}

state_dir() {
  local d="${TMUXD_STATE_DIR:-$HOME/.clawdbot/tmuxd}"
  mkdir -p "$d"
  chmod 700 "$d" 2>/dev/null || true
  echo "$d"
}

first_pane() {
  local sess="$1"
  tmuxS list-panes -t "$sess" -F '#{pane_id}' | head -n1
}

ensure_session() {
  local name="$1"
  local sess; sess="$(sess_for "$name")"
  if ! tmuxS has-session -t "$sess" 2>/dev/null; then
    tmuxS new-session -d -s "$sess" -n main
  fi
  echo "$sess"
}

droid_send() {
  local name="$1"; shift
  local sess; sess="$(ensure_session "$name")"
  local pane; pane="$(first_pane "$sess")"
  if [[ -z "$pane" ]]; then
    echo "Failed to find pane for session: $sess" >&2
    exit 1
  fi
  tmuxS send-keys -t "$pane" -l -- "$*"
  tmuxS send-keys -t "$pane" Enter
}

droid_last_session_id() {
  local name="$1"
  local sess; sess="$(sess_for "$name")"
  local pane; pane="$(first_pane "$sess")"
  if [[ -z "$pane" ]]; then
    return 1
  fi
  # 搜索最近输出中的 session_id（json 输出）
  tmuxS capture-pane -p -J -t "$pane" -S -800 \
    | grep -oE '"session_id"\s*:\s*"[^"]+"' \
    | tail -n1 \
    | sed -E 's/.*"session_id"\s*:\s*"([^"]+)".*/\1/'
}

cmd_session_id() {
  local name="$1"
  local id
  id="$(droid_last_session_id "$name" || true)"
  if [[ -z "$id" ]]; then
    echo "<none>" >&2
    exit 1
  fi
  echo "$id"
}

cmd_droid_exec() {
  local name="$1"; shift
  if [[ "${1:-}" != "--" ]]; then
    echo "Missing -- before prompt" >&2
    usage
    exit 2
  fi
  shift
  local prompt="${1:-}"
  if [[ -z "$prompt" ]]; then
    echo "Missing prompt string" >&2
    exit 2
  fi

  local cwd="${PWD}"
  local auto="low"
  shift || true
  while [[ $# -gt 0 ]]; do
    case "$1" in
      --cwd) cwd="$2"; shift 2;;
      --auto) auto="$2"; shift 2;;
      *) shift;;
    esac
  done

  local sd; sd="$(state_dir)"
  local pf="$sd/${name}.prompt.$(date +%s).txt"
  printf "%s" "$prompt" > "$pf"
  chmod 600 "$pf" 2>/dev/null || true

  local env_prefix=""
  if [[ -n "${TMUXD_ENV_FILE:-}" ]]; then
    env_prefix="source \"${TMUXD_ENV_FILE}\" && "
  fi

  droid_send "$name" "bash -lc '"${env_prefix}"droid exec -f \"$pf\" --cwd \"$cwd\" --output-format json --auto $auto'"
  echo "Queued droid exec in session: $(sess_for "$name")"
  echo "Prompt file: $pf"
}

cmd_droid_continue() {
  local name="$1"; shift
  if [[ "${1:-}" != "--" ]]; then
    echo "Missing -- before prompt" >&2
    usage
    exit 2
  fi
  shift
  local prompt="${1:-}"
  if [[ -z "$prompt" ]]; then
    echo "Missing prompt string" >&2
    exit 2
  fi

  local sid
  sid="$(droid_last_session_id "$name" || true)"
  if [[ -z "$sid" ]]; then
    echo "No session_id found for $name. Run droid-exec first." >&2
    exit 1
  fi

  local cwd="${PWD}"
  local auto="low"
  shift || true
  while [[ $# -gt 0 ]]; do
    case "$1" in
      --cwd) cwd="$2"; shift 2;;
      --auto) auto="$2"; shift 2;;
      *) shift;;
    esac
  done

  local sd; sd="$(state_dir)"
  local pf="$sd/${name}.prompt.$(date +%s).txt"
  printf "%s" "$prompt" > "$pf"
  chmod 600 "$pf" 2>/dev/null || true

  local env_prefix=""
  if [[ -n "${TMUXD_ENV_FILE:-}" ]]; then
    env_prefix="source \"${TMUXD_ENV_FILE}\" && "
  fi

  droid_send "$name" "bash -lc '"${env_prefix}"droid exec -f \"$pf\" --session-id \"$sid\" --cwd \"$cwd\" --output-format json --auto $auto'"
  echo "Queued droid continue (session_id=$sid) in session: $(sess_for "$name")"
  echo "Prompt file: $pf"
}

cmd_start() {
  local name="$1"; shift
  if [[ "${1:-}" != "--" ]]; then
    echo "Missing -- before command" >&2
    usage
    exit 2
  fi
  shift
  if [[ $# -lt 1 ]]; then
    echo "Missing command" >&2
    exit 2
  fi

  local sess; sess="$(sess_for "$name")"

  if tmuxS has-session -t "$sess" 2>/dev/null; then
    echo "Session already exists: $sess" >&2
    exit 1
  fi

  tmuxS new-session -d -s "$sess" -n main

  # 找到该 session 的第一个 pane（兼容 base-index=1 的环境）
  local pane
  pane="$(tmuxS list-panes -t "$sess" -F '#{pane_id}' | head -n1)"
  if [[ -z "$pane" ]]; then
    echo "Failed to find pane for session: $sess" >&2
    exit 1
  fi

  # 可选：自动注入环境变量文件（方案 1）
  # 用法：TMUXD_ENV_FILE=~/.config/factory/env ./tmuxd/bin/tmuxctl start job1 -- droid exec ...
  local env_prefix=""
  if [[ -n "${TMUXD_ENV_FILE:-}" ]]; then
    env_prefix="source \"${TMUXD_ENV_FILE}\" && "
  fi

  # 让 tmux 里执行的命令用 exec 覆盖 shell，便于 pane_exit 判定
  # 通过 bash -lc 确保 source 生效
  local cmd_str
  cmd_str="${env_prefix}exec $*"

  # 单引号安全包裹（把 ' 转义成 '\''）
  local sq
  sq="'${cmd_str//"'"/"'\\''"}'"

  tmuxS send-keys -t "$pane" -l -- "bash -lc $sq"
  tmuxS send-keys -t "$pane" Enter

  echo "Started: $sess"
  echo "Monitor: tmux -S \"$TMUXD_SOCKET\" attach -t \"$sess\""
}

cmd_stop() {
  local name="$1"
  local sess; sess="$(sess_for "$name")"
  tmuxS kill-session -t "$sess"
  echo "Stopped: $sess"
}

cmd_attach() {
  local name="$1"
  local sess; sess="$(sess_for "$name")"
  tmuxS attach -t "$sess"
}

cmd_log() {
  local name="$1"; shift
  local n=200
  if [[ "${1:-}" == "-n" ]]; then
    n="$2"; shift 2
  fi
  local sess; sess="$(sess_for "$name")"
  local pane
  pane="$(tmuxS list-panes -t "$sess" -F '#{pane_id}' | head -n1)"
  tmuxS capture-pane -p -J -t "$pane" -S "-$n"
}

cmd_status() {
  python3 "$(dirname "$0")/../monitor.py" --socket "$TMUXD_SOCKET" --prefix "$TMUXD_PREFIX"
}

main() {
  local sub="${1:-}"; shift || true
  case "$sub" in
    list) cmd_list "$@" ;;
    start) cmd_start "$@" ;;
    stop) cmd_stop "$@" ;;
    attach) cmd_attach "$@" ;;
    log) cmd_log "$@" ;;
    status) cmd_status "$@" ;;

    droid-exec) cmd_droid_exec "$@" ;;
    droid-continue) cmd_droid_continue "$@" ;;
    session-id) cmd_session_id "$@" ;;

    -h|--help|help|"") usage; exit 0 ;;
    *) echo "Unknown subcommand: $sub" >&2; usage; exit 2 ;;
  esac
}

main "$@"
